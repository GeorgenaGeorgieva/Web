@model CreateProductInputModel

@{
    ViewData["Title"] = "Create";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

    <h3>Добавяне на продукт в базата</h3>
    <h6>Попълнете полетата и изпратете формата.</h6>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Изпрати" class="btn btn-success" />
                    <a class="btn btn-info" asp-action="All">Назад</a>
                </div>
            </form>
        </div>
    </div>
</body>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
</html>
