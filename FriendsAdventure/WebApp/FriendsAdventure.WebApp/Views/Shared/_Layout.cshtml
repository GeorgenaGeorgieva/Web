<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FriendsAdventure.WebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap1.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap1.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/_bootswatch.scss" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/_variables.scss" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/fontawesome/all.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/fontawesome/all.css" asp-append-version="true" />
</head>
<body >
    <header>
            <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
                <div class="container">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Friends</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse d-sm-inline-flex flex-sm-row-reverse" id="navbarColor01">
                        <partial name="_LoginPartial" />
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item active navbar-nav flex-grow-1">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Начало</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Products" asp-action="All">Продукти</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Orders" asp-action="All">Поръчки</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
    </header>
    <br />
    <div class="container jumbotron justify-content-center">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    
    <footer class="border-top footer text-center text-light align-text-bottom">
        <div class="container">
            <div class="row text-center">
                <div class="col-md-12">
                    <p>
                        &copy; 2020-@DateTime.Now.Year <strong>AdventuresWithFriends </strong><a href="https://github.com/GeorgenaGeorgieva/FriendsAdventure" target="_blank">
                            <i class="fab fa-github"></i> Open Source System
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
